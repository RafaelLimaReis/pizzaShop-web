{
  "extends": [
    "@rocketseat/eslint-config/react"
  ],
  "plugins": ["simple-import-sort"],
  "rules": {
    "simple-import-sort/imports": "error",
    "prettier/prettier": ["error", {
      "printWidth": 100,
      "tabWidth": 4,
      "singleQuote": true,
      "arrowParens": "always",
      "semi": false,
      "endOfLine": "auto"
    }]
  }
}